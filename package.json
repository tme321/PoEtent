{
  "name": "poetent",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "bootstrap": "lerna bootstrap --use-workspaces",
    "clean": "lerna clean --yes && lerna exec -- rm -rf dist",
    "refresh": "lerna bootstrap",
    "build": "lerna run build --stream",
    "build:lib": "lerna run build --stream --scope=@poetent/filters-lib",
    "dev": "lerna run dev --stream",
    "dev:filters-app": "lerna run dev --stream --scope=@poetent/filters-app"
  },
  "devDependencies": {
    "@types/node": "^18.7.1",
    "@vitejs/plugin-react": "^2.0.0",
    "lerna": "^5.4.0",
    "nx": "^14.5.4",
    "typescript": "^4.6.4",
    "vite": "^3.0.0"
  }
}
